<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="horizontal"
    android:id="@+id/fragment_home"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_textView"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:gravity="center"
            android:background="@drawable/home_home_bg"
            android:textSize="40dp"
            android:text="Final work"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_time"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_time_bg"
                android:text="@string/home_time"
                android:textColor="@color/selected_color_text"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_game"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/home_game_bg"
                android:text="@string/home_game"
                android:textColor="@color/selected_color_text"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_music"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/home_music_bg"
                android:text="@string/home_music"
                android:textColor="@color/selected_color_text"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_weather"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/home_weather_bg"
                android:text="@string/home_weather"
                android:textColor="@color/selected_color_text"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
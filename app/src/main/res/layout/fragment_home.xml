    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_time"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/home_time_bg"
            android:text="@string/home_time"
            android:textColor="@color/selected_color_text"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_game"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/home_game_bg"
            android:text="@string/home_game"
            android:textSize="25sp"
            android:textColor="@color/selected_color_text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_music"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/home_music_bg"
            android:text="@string/home_music"
            android:textSize="25sp"
            android:textColor="@color/selected_color_text" />

        <Button
            android:id="@+id/btn_weather"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/home_weather_bg"
            android:text="@string/home_weather"
            android:textSize="25sp"
            android:textColor="@color/selected_color_text" />
    </LinearLayout>

</LinearLayout>